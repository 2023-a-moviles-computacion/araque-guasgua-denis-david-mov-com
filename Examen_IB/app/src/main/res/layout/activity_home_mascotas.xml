<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FDFA">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="cursive"
        android:text="MASCOTAS"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textColorHighlight="@color/blue"
        android:textColorHint="@color/black"
        android:textColorLink="@color/blue"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="334dp"
        android:layout_height="455dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombreDuenio">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_mascotas_lista"
                android:layout_width="match_parent"
                android:layout_height="446dp"
                android:background="#00BCD4" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_crear_new_mascota"
        android:layout_width="301dp"
        android:layout_height="69dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/black"
        android:text="AGREGAR NUEVA MASCOTA"
        android:textColor="@color/white"
        android:textColorHighlight="@color/design_default_color_secondary_variant"
        android:textColorHint="@color/black"
        android:textColorLink="@color/design_default_color_secondary_variant"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/scrollView2"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/scrollView2"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <Button
        android:id="@+id/btn_volver_mascota"
        android:layout_width="293dp"
        android:layout_height="75dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#0B666A"
        android:text="ATRÁS"
        android:textColor="@color/white"
        android:textColorHighlight="@color/design_default_color_secondary_variant"
        android:textColorHint="@color/black"
        android:textColorLink="@color/design_default_color_secondary_variant"
        app:layout_constraintEnd_toEndOf="@+id/btn_crear_new_mascota"
        app:layout_constraintStart_toStartOf="@+id/btn_crear_new_mascota"
        app:layout_constraintTop_toBottomOf="@+id/btn_crear_new_mascota" />

    <TextView
        android:id="@+id/tv_nombreDuenio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Dueño:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>